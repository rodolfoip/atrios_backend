{
  "name": "atrios_backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/main/index.js",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "scripts": {
    "start": "nodemon src/main/index.js",
    "build": "node src/main/index.js",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "test": "jest --noStackTrace --runInBand --colors",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:ci": "npm test -- --coverage --silent"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npx standard --fix",
      "npm run test:staged"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run precommit",
      "pre-push": "npm run test:ci"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodolfoip/atrios_backend.git"
  },
  "author": "Rodolfo Pereira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rodolfoip/atrios_backend/issues"
  },
  "homepage": "https://github.com/rodolfoip/atrios_backend#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@shelf/jest-mongodb": "^1.2.5",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.15",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fast-glob": "^3.2.5",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.9",
    "validator": "^13.6.0"
  }
}
